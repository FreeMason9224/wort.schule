= link_to word, class: 'flex justify-between px-4 border-b', 'data-search-result': true, 'data-turbo-frame': '_top' do
  .grid.grid-cols-2.gap-2(style="grid-template-columns: 3rem 1fr")
    - if word.image.attached?
      = image_tag word.image.variant(:thumb), style: 'max-height: 100%'
    - else
      %div

    .py-2.flex.items-baseline.font-bold
      = render HighlightedSearchResultComponent.new(result: word, query: params.dig(:filterrific, :filter_home))

  .uppercase.text-xs.py-2= word.model_name.human
