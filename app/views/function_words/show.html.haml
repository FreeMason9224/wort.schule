.flex.flex-col.gap-y-12.md:grid.md:grid-cols-2.md:gap-12
  = render WordHeaderComponent.new(word: @function_word) do |component|
    - component.with_title do
      %h1= @function_word.name

  = render BoxComponent.new(title: t('words.show.properties')) do
    = render BoxGridComponent.new do
      %div= Word.human_attribute_name(:type)
      %div= @function_word.class.model_name.human

      %div= FunctionWord.human_attribute_name(:function_type)
      %div= @function_word.function_type_text

      %div= Word.human_attribute_name(:written_syllables)
      %div= @function_word.written_syllables

  = render 'words/more_meanings', word: @function_word
  = render 'shared/versions', model: @function_word

.pagination-with-actions.mt-12
  - if can? :edit, @function_word
    = link_to t('actions.edit'), edit_function_word_path(@function_word), class: 'button primary'
