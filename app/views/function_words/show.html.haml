= render WordHeaderComponent.new(word: @function_word) do |component|
  - component.with_title do
    %h1= @function_word.name

= render "words/more_meanings", word: @function_word

= two_column_card FunctionWord.model_name.human, "", first: true do
  = box padding: false do
    = box_description_list do |list|
    
      = render(list.add(FunctionWord.human_attribute_name(:function_type))) do
        = @function_word.function_type_text

      = render(list.add(Word.human_attribute_name(:written_syllables))) do
        = @function_word.written_syllables

.pagination-with-actions
  - if can? :edit, @function_word
    = link_to t('actions.edit'), edit_function_word_path(@function_word), class: 'button primary'
