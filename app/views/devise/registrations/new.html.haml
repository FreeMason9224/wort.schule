.min-h-full.flex.items-center.justify-center.py-12.px-4.sm:px-6.lg:px-8
  .max-w-md.w-full.space-y-8
    %div
      = image_tag 'logo.svg', class: 'mx-auto h-12 w-auto', alt: 'Wort.Schule Logo'
      %h2.mt-6.text-center.text-3xl.font-extrabold.text-gray-900= t('.sign_up')
      %p.mt-2.text-center.text-sm.text-gray-600
        = t('.already_have_account')
        = link_to t('devise.shared.links.sign_in'), new_user_session_path, class: 'font-medium text-indigo-600 hover:text-indigo-500'

    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'mt-i space-y-6') do |f|
      = box padding: true do
        = f.input :email, required: true, autofocus: true , input_html: { autocomplete: "email" }
        = f.input :password, required: true, hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length), input_html: { autocomplete: "new-password" }
        = f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }

        .form-actions
          = f.submit value: t('.sign_up')
