.flex.flex-wrap.items-baseline.gap-1{ 'data-name': result.full_name }
  - if parts.blank?
    = result.full_name
  - else
    .flex.items-baseline
      - parts.each do |part|
        %span{ class: part.match?(/#{query}/i) ? 'bg-search-highlight' : '' }
          = part.html_safe
  %span= t hit_in, scope: :words, base: result.full_name
